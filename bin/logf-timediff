#!/bin/bash

total=0
while IFS= read -r line; do
    read -ra words <<< "$line"
    # Print each word
    t1=$(date -d ${words[0]} +%s)
    t2=$(date -d ${words[2]%%:} +%s)
    t3=$((t2-t1))
    timediff=$(date -ud @$t3 +%H:%M)
    total=$((total + t3))
    sed "s/\([0-9: ->]\+\):/\1 | $timediff:/" <<< $line
done
echo "total: $(date -ud @$total +%H:%M)"
