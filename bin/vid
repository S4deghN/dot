#!/usr/bin/bash
set -e -o pipefail

regex=${1:-"*"}

query=$(find ~/dot -not -path "*/\.git/*" -wholename "*$regex*" -type f)
[[ -z $query ]] && exit 1

if [[ $(printf "%s\n" $query | wc -l) -eq 1 ]]; then
    $EDITOR $query
else
    $EDITOR $(printf "%s\n" $query | fzf --height 60% --preview 'highlight -O ansi -l {}' --preview-window=down)
fi


