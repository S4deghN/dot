        bindsym f exec --no-startup-id firefox, mode "default"
        bindsym q exec --no-startup-id qutebrowser, mode "default"
        bindsym t exec --no-startup-id thunar, mode "default"
        bindsym h exec --no-startup-id $TERMINAL -e htop, mode "default"
        bindsym n exec --no-startup-id nitrogen, mode "default"
        bindsym c exec --no-startup-id google-chrome-stable, mode "default"
        bindsym l exec --no-startup-id lutris, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Ctrl+c mode "default"
        bindsym $mod+a mode "default"; exec --no-startup-id rofi -show drun
}


