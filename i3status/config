general {
        separator = "|"
        output_format = "i3bar"
        colors = true
        interval = 2
        markup=pango
}

order += "volume master"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "tztime time"
order += "battery all"
// order += "tztime date"

volume master {
        format = "ðŸ”Š %volume"
        format_muted = "ðŸ”‡ muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = "W (%quality at %essid, %bitrate) %ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "E %ip (%speed)"
        format_down = ""
}

battery all {
        last_full_capacity = true
        integer_battery_capacity = true
        format = "<span color='#F0C674'>%status</span>  %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ðŸª«"
        status_unk = "BAT?"
        status_full = "ðŸ”‹"
        status_idle = "ðŸ”Œ"
        low_threshold = 10
        path = "/sys/class/power_supply/BAT%d/uevent"
}

tztime time {
        format = "<span color='#F0C674'>%d-%m-%Y, %a, %H:%M</span>"
}

tztime date {
        format = %d-%m-%Y
}

memory {
        format = "<span color='#F0C674'>RAM</span> %used"
        decimals = 0
}

